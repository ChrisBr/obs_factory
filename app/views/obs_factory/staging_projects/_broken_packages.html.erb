<%- count = project.broken_packages.count %>
<%- id = project.letter %>
<%- id += '-DVD-' if is_dvd %>
<%= link_to count,
            "javascript:window.toggle_display('broken-list-#{id}')",
            class: "#{(count.zero? ? 'ok' : 'alert')} main" %>
<div style="display:none" id="broken-list-<%= id %>">
  <%- project.broken_packages.each do |pack| %>
    <%= link_to "#{pack['package']} (#{pack['state']})",
                main_app.package_show_url(project.name, pack['package']) %>
  <%- end %>
</div>
